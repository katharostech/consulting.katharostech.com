---
import CompatibilityList from "~/components/compatibility-list.astro";
import ContentSection from "~/components/content-section.astro";
import type { CompatibilityItem } from "~/types";

interface Props {
  id: string;
  title: string;
  lead: string;
  lists: {
    title: string;
    url?: string;
    items: CompatibilityItem[];
  }[];
}
const props = Astro.props;
---

<ContentSection title={props.title} id={props.id}>
  <Fragment slot="lead" set:html={props.lead} />
  {
    props.lists.map((list) => (
      <CompatibilityList items={list.items} title={list.title} url={list.url} />
    ))
  }
</ContentSection>
